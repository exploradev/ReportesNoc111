                .tiporeporte_opcion#opcion_diez(data-eleccion='callback')
                    div
                        img.icon_svg_opciones(src="../../../assets/svg/callback.svg", alt="") 
                    p CALLBACK
                .tiporeporte_opcion#opcion_cuatro(data-eleccion='iccid')
                    div
                        img.icon_svg_opciones(src="../../../assets/svg/iccid.svg", alt="")
                    p CAMBIO DE ICCID
                .tiporeporte_opcion#opcion_cinco(data-eleccion='llamadas')
                    div
                        img.icon_svg_opciones(src="../../../assets/svg/llamadas.svg", alt="")
                    p LLAMADAS / SMS
                .tiporeporte_opcion#opcion_seis(data-eleccion='navegacion')
                    div
                        img.icon_svg_opciones(src="../../../assets/svg/navegacion.svg", alt="")
