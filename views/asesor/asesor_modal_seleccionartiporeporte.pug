        .header_modal
            span NUEVO REPORTE
            span 
                img.closebuttonn(src="../assets/closebuttonn.png")
        .body_modal#bodymodal_seleccionartiporeporte
            label Número Telefónico
            input#input_numerotiporeporte(type="text", name="input_numerotiporeporte" placeholder='Número telefónico')
            #contenedor_tablaopciones
                
                .tiporeporte_opcion#opcion_uno(data-eleccion='aclaraciones')
                    div
                        img.icon_svg_opciones(src="../../../assets/svg/aclaraciones.svg", alt="")
                    p ACLARACIONES
                .tiporeporte_opcion#opcion_dos(data-eleccion='general')
                    div
                        img.icon_svg_opciones(src="../../../assets/svg/general.svg", alt="")
                    p AFECTACIÓN GENERAL 
                .tiporeporte_opcion#opcion_tres(data-eleccion='cobertura')
